.container
  - article.errors.full_messages.each do |message|
    %li= message
  = form_with(model: article, local: true) do |f|
    %div
      =f.label :photos, '写真'
    %div
      =f.file_field :photos, :multiple => true
    %div
      = f.label :sentence, '文章'
    %div
      = f.text_area :sentence
    = f.submit '保存', class: 'btn-primary'